name: CI

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
        with:
          fetch-depth: 0

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Install dependencies
        run: |
          pip install git+https://github.com/squidfunk/mkdocs-material
          pip install pymdown-extensions mkdocs-redirects mkdocs-glightbox mkdocs-include-markdown-plugin mkdocs-git-revision-date-localized-plugin

      - name: Build MkDocs site
        run: mkdocs build --clean

      - name: Generate build report
        run: mkdocs build > build_report.txt || true
        continue-on-error: true

      - name: Upload build report
        uses: actions/upload-artifact@v3
        with:
          name: build-report
          path: build_report.txt

      - name: Deploy to GitHub Pages
        if: github.ref == 'refs/heads/main'
        run: mkdocs gh-deploy --force

  status:
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Download build report
        uses: actions/download-artifact@v3
        with:
          name: build-report

      - name: Show build report
        run: cat build_report.txt
